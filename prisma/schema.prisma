generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model cafe {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  cafe_name    String   @unique @default("Cloudy Curtain")
  cafe_owner   String   @default("Ronald Berg")
  cafe_address String   @default("ABC A. Street")
  meals        meals[]
  users        users[]
}

model meals {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  cafeId     Int?
  meal_name  String   @unique
  meal_type  String[]
  price      BigInt   @default(1)
  meal_perks String[]
  cafeOrigin cafe?    @relation(fields: [cafeId], references: [id])
  orders     orders[]
}

model orders {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  customerId BigInt
  orderMeal  meals?   @relation(fields: [orderId], references: [id])
  orderId    Int
}

model users {
  id             Int        @id @default(autoincrement())
  createdAt      DateTime   @default(now())
  cafeId         Int?
  cafeOrigin     cafe?      @relation(fields: [cafeId], references: [id])
  username       String     @unique @default("admin")
  password       String     @default("admin")
  userPermission Permission @default(READ_WRITE)
  comment        String     @default("Default user access")
}

enum Permission {
  READ
  WRITE
  READ_WRITE
}
